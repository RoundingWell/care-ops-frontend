<td class="table-list__cell w-40">
  <span class="workflows__action-icon">{{far icon}}</span>{{~ remove_whitespace ~}}
  <span class="workflows__action-name">
    {{ name }}{{~ remove_whitespace ~}}
    {{~#unless name}}<em>{{ @intl.programs.program.workflows.actionItemTemplate.newProgramAction }}</em>{{/unless~}}
  </span>
</td>
<td class="table-list__cell w-60">
  <span class="table-list__meta" data-published-region></span>{{~ remove_whitespace ~}}
  <span class="table-list__meta" data-owner-region></span>{{~ remove_whitespace ~}}
  <span class="table-list__meta" data-due-region></span>{{~ remove_whitespace ~}}
  <span class="table-list__meta">
    {{#if hasForm}}
      <button class="js-form button-secondary--compact">{{far "square-poll-horizontal"}}</button>
    {{/if }}
  </span>{{~ remove_whitespace ~}}
  <span class="workflows__item-ts">{{formatDateTime updated_at "TIME_OR_DAY"}}</span>
</td>
